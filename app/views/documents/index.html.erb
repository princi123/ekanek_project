<div class="container">
	<h3>Welcome to your world</h3> 
	  
	<%= link_to "New document", new_document_path %>   
	<br>   
	<br>  
  <div>
		<table border="4" width="100%">   
		   <thead>   
		      <tr>   
		         <th>Name</th>
		         <th>Desciption</th>
		         <th>Download Link</th>   
		         <th>Action</th>   
		      </tr>   
		   </thead>   
		      
		   <tbody>   
		      <% @documents.each do |document| %>   
		            
		         <tr>   
		            <td><%= document.name %></td> 
		            <td><%= document.description %></td>  
		            <td><%= link_to "Download", document.attachment_url %></td>   
		            <td><%= link_to "Delete",  document, method: :delete, confirm: "Are you sure you want to delete #{document.name}?" %></td>   
		         </tr>   
		            
		      <% end %>   
		   </tbody>   
		      
		</table>   
	</div>
</div>
