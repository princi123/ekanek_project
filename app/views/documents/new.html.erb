<h1>Documents#new</h1>
<p>Find me in app/views/documents/new.html.erb</p>
<div>
	<div class="container">   
		<% if !@document.errors.empty? %>   
		  <div>   
		    <ul>   
		      <% @document.errors.full_messages.each do |msg| %>   
		        <li><%= msg %></li>   
		      <% end %> 
		    </ul>
		  </div>
		<% end %>
	</div>
	<div class="container">   
		<% if !@document.errors.empty? %>   
		   <div>    
		      <ul>   
		        <% @document.errors.full_messages.each do |msg| %>   
		          <li><%= msg %></li>   
		        <% end %>
		      </ul>   
		         
		   </div>   
		<% end %>   
	</div>

	<div>   
	   <%= form_for @document, html: { multipart: true } do |f| %>   
	      <%= f.label :name %>   
	      <%= f.text_field :name %>   
	      <br><br>   
	      <%= f.label :description %>   
	      <%= f.text_field :description %>   
	      <br><br>
	      <%= f.label :attachment %>   
	      <%= f.file_field :attachment %>   
	      <br>   
	      <%= f.submit "Save" %>   
	   <% end %>   
	</div>   
</div>  

